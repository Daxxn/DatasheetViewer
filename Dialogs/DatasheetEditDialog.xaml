<Window x:Class="DatasheetViewer.Dialogs.DatasheetEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatasheetViewer.Dialogs"
        mc:Ignorable="d"
        Title="DatasheetEditDialog" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <Grid>
                
            </Grid>
        </Border>

        <DataGrid Grid.Column="1" ItemsSource="{Binding Path=Datasheets}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Part Name" Binding="{Binding Path=PartName}"/>
                <DataGridTextColumn Header="Desc" Binding="{Binding Path=Description}"/>
                <DataGridTextColumn Header="Desc" Binding="{Binding Path=TagNames}"/>
                <DataGridTextColumn Header="Desc" Binding="{Binding Path=FileName}"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
